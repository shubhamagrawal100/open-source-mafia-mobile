<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.opensourcemafiamobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
	    
   	    <activity
	        android:name="com.example.opensourcemafiamobile.OutputTextActivity"
	        android:label="@string/play_by_play"
	        android:parentActivityName="com.example.opensourcemafiamobile.MainActivity" >
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.example.opensourcemafiamobile.MainActivity" />
	    </activity>
	    
    	<activity
	        android:name="com.example.opensourcemafiamobile.NightlyActions"
	        android:label="@string/play_by_play"
	        android:parentActivityName="com.example.opensourcemafiamobile.MainActivity" >
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.example.opensourcemafiamobile.MainActivity" />
	    </activity>
        
    </application>

</manifest>
